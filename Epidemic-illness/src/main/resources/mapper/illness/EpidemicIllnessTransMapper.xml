<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zstu.epidemic.illness.mapper.EpidemicIllnessTransMapper">
    
    <resultMap type="EpidemicIllnessTrans" id="EpidemicIllnessTransResult">
        <result property="transId"    column="trans_id"    />
        <result property="illnessId"    column="illness_id"    />
    </resultMap>

    <sql id="selectEpidemicIllnessTransVo">
        select trans_id, illness_id from epidemic_illness_trans
    </sql>

    <select id="selectEpidemicIllnessTransList" parameterType="EpidemicIllnessTrans" resultMap="EpidemicIllnessTransResult">
        <include refid="selectEpidemicIllnessTransVo"/>
        <where>  
            <if test="transId != null "> and trans_id = #{transId}</if>
            <if test="illnessId != null "> and illness_id = #{illnessId}</if>
        </where>
    </select>
    
    <select id="selectEpidemicIllnessTransByTransId" parameterType="Long" resultMap="EpidemicIllnessTransResult">
        <include refid="selectEpidemicIllnessTransVo"/>
        where trans_id = #{transId}
    </select>
        
    <insert id="insertEpidemicIllnessTrans" parameterType="EpidemicIllnessTrans" useGeneratedKeys="true" keyProperty="transId">
        insert into epidemic_illness_trans
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="illnessId != null">illness_id,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="illnessId != null">#{illnessId},</if>
         </trim>
    </insert>

    <update id="updateEpidemicIllnessTrans" parameterType="EpidemicIllnessTrans">
        update epidemic_illness_trans
        <trim prefix="SET" suffixOverrides=",">
            <if test="illnessId != null">illness_id = #{illnessId},</if>
        </trim>
        where trans_id = #{transId}
    </update>

    <delete id="deleteEpidemicIllnessTransByTransId" parameterType="Long">
        delete from epidemic_illness_trans where trans_id = #{transId}
    </delete>

    <delete id="deleteEpidemicIllnessTransByTransIds" parameterType="String">
        delete from epidemic_illness_trans where trans_id in 
        <foreach item="transId" collection="array" open="(" separator="," close=")">
            #{transId}
        </foreach>
    </delete>
</mapper>